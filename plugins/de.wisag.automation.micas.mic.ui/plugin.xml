<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
              class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
              contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
              default="true"
              extensions="mic,MIC"
              icon="icons/mic.gif"
              id="de.wisag.automation.micas.MIC"
              name="MIC Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="de.wisag.automation.micas.MIC.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="de.wisag.automation.micas.MIC.validate">
         <activeWhen>
            <reference
                    definitionId="de.wisag.automation.micas.MIC.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
		<!-- copy qualified name -->
		<handler
			class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedNameHandler"
			commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName">
			<activeWhen>
				<reference definitionId="de.wisag.automation.micas.MIC.Editor.opened" />
			</activeWhen>
		</handler>
		<handler
			class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedNameHandler"
			commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName">
			<activeWhen>
				<and>
					<reference definitionId="de.wisag.automation.micas.MIC.XtextEditor.opened" />
					<iterate>
						<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
					</iterate>
				</and>
			</activeWhen>
		</handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="de.wisag.automation.micas.MIC.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
				<with variable="activeEditor">
					<test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName"
						value="de.wisag.automation.micas.MIC"
						forcePluginActivation="true"/>
				</with>
			</and>
		</definition>
		<definition id="de.wisag.automation.micas.MIC.XtextEditor.opened">
			<and>
				<reference definitionId="isXtextEditorActive"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="de.wisag.automation.micas.MIC" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="de.wisag.automation.micas.MIC"
            name="MIC">
            <keywordReference id="de.wisag.automation.micas.ui.keyword_MIC"/>
        </page>
        <page
            category="de.wisag.automation.micas.MIC"
            class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="de.wisag.automation.micas.MIC.coloring"
            name="Syntax Coloring">
            <keywordReference id="de.wisag.automation.micas.ui.keyword_MIC"/>
        </page>
        <page
            category="de.wisag.automation.micas.MIC"
            class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="de.wisag.automation.micas.MIC.templates"
            name="Templates">
            <keywordReference id="de.wisag.automation.micas.ui.keyword_MIC"/>
        </page>
    </extension>
    <extension
			point="org.eclipse.ui.propertyPages">
		<page
			class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
			id="de.wisag.automation.micas.MIC"
			name="MIC">
			<keywordReference id="de.wisag.automation.micas.ui.keyword_MIC"/>
			<enabledWhen>
				<adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
			<filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
		</page>
	</extension>
	<extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="de.wisag.automation.micas.ui.keyword_MIC"
            label="MIC"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="de.wisag.automation.micas.MIC.validate"
            name="Validate">
	</command>
	<!-- copy qualified name -->
	<command
			id="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
			categoryId="org.eclipse.ui.category.edit"
			description="Copy the qualified name for the selected element"
			name="Copy Qualified Name">
	</command>
	<command
			id="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName"
			categoryId="org.eclipse.ui.category.edit"
			description="Copy the qualified name for the selected element"
			name="Copy Qualified Name">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="de.wisag.automation.micas.MIC.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="de.wisag.automation.micas.MIC.Editor.opened">
                </reference>
			</visibleWhen>
		</command>
		</menuContribution>
		<!-- copy qualified name -->
		<menuContribution locationURI="popup:#TextEditorContext?after=copy">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
				style="push" tooltip="Copy Qualified Name">
				<visibleWhen checkEnabled="false">
					<reference definitionId="de.wisag.automation.micas.MIC.Editor.opened" />
				</visibleWhen>
			</command>
		</menuContribution>
		<menuContribution locationURI="menu:edit?after=copy">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
				style="push" tooltip="Copy Qualified Name">
				<visibleWhen checkEnabled="false">
					<reference definitionId="de.wisag.automation.micas.MIC.Editor.opened" />
				</visibleWhen>
			</command>
		</menuContribution>
		<menuContribution locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName"
				style="push" tooltip="Copy Qualified Name">
				<visibleWhen checkEnabled="false">
					<and>
						<reference definitionId="de.wisag.automation.micas.MIC.XtextEditor.opened" />
						<iterate>
							<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
						</iterate>
					</and>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="de.wisag.automation.micas.MIC.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="de.wisag.automation.micas.MIC.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="mic">
		</parser>
  <parser
        class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
        type="MIC">
  </parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="mic">
        </resourceServiceProvider>
        <resourceServiceProvider
              class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
              uriExtension="MIC">
        </resourceServiceProvider>
    </extension>




	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="de.wisag.automation.micas.MIC.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="de.wisag.automation.micas.MIC.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
   <!-- quickfix marker resolution generator -->
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator">
      </markerResolutionGenerator>
   </extension>
   <extension
         point="org.eclipse.xtext.builder.participant">
      <participant
            class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:de.wisag.automation.micas.ui.builder.MicasBuilder">
      </participant>
   </extension>
	<extension point="org.eclipse.compare.contentViewers">
		<viewer id="de.wisag.automation.micas.MIC.compare.contentViewers"
			class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
			extensions="mic">
		</viewer>
	</extension>
	<extension point="org.eclipse.compare.contentMergeViewers">
		<viewer id="de.wisag.automation.micas.MIC.compare.contentMergeViewers"
			class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
			extensions="mic" label="MIC Compare">
		</viewer>
	</extension>
	<extension point="org.eclipse.ui.editors.documentProviders">
		<provider id="de.wisag.automation.micas.MIC.editors.documentProviders"
			class="de.wisag.automation.micas.ui.MICExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
			extensions="mic">
		</provider>
	</extension>
	<extension point="org.eclipse.team.core.fileTypes">
		<fileTypes
			extension="mic"
			type="text">
		</fileTypes>
	</extension>
</plugin>
